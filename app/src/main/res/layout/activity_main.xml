            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Microphone"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/devicePosition" />

        <EditText
            android:id="@+id/devicePosition"
            android:layout_width="150sp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Device Position"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pinglv" />

        <EditText
            android:id="@+id/pinglv"
            android:layout_width="150sp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Scan result"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roationalVectorYPlainText" />

        <EditText
            android:id="@+id/magnetometerZplainText"
            android:layout_width="150sp"
            android:layout_height="23dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/accelerometerZ"
            android:inputType="textPersonName"
            android:text="@string/accelerometerZ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/magnetometerYplainText" />

        <EditText
            android:id="@+id/roationalVectorZPlainText"
            android:layout_width="150sp"
            android:layout_height="23dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/rotionalVectorZ"
            android:inputType="textPersonName"
