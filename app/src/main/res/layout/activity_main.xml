            app:layout_constraintTop_toBottomOf="@+id/linearAcceleratorXTextView" />

        <TextView
            android:id="@+id/linearAcceleratorXTextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/magnetometerZTextView" />

        <TextView
            android:id="@+id/magnetometerZTextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/magnetometerYTextView" />

        <TextView
            android:id="@+id/magnetometerYTextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/magnetometerXTextView" />

        <TextView
            android:id="@+id/magnetometerXTextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startDataBtn"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:onClick="startSensors"
            android:text="@string/startBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:onClick="endSensors"
            android:text="@string/endBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/go2SecondActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:onClick="go2SecondActivity"
            android:text="@string/go2SecondActivityBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.871"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/saoyisao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="48dp"
            android:onClick="go2SecondActivity"
            android:text="Scan begin"
            app:layout_constraintBottom_toBottomOf="@+id/go2SecondActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.871"
            app:layout_constraintStart_toStartOf="parent" />

