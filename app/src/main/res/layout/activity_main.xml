            android:layout_height="23dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/accelerometerX"
            android:inputType="textPersonName"
            android:text="@string/accelerometerX"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/magnetometerYplainText"
            android:layout_width="150sp"
            android:layout_height="23dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/accelerometerY"
            android:inputType="textPersonName"
            android:text="@string/accelerometerY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/magnetometerXplainText" />

        <TextView
            android:id="@+id/microphoneDataTextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/devicePosition" />

        <TextView
            android:id="@+id/devicePositionTextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pinglv" />

        <TextView
            android:id="@+id/orientationYTextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orientationXTextView" />

        <TextView
            android:id="@+id/orientationXTextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearAcceleratorZTextView" />

        <TextView
            android:id="@+id/rotationalVectorYTextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rotationalVectorXTextView" />

        <TextView
            android:id="@+id/rotationalVectorZTextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="8dp"
