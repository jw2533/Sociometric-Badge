            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/rotionalVectorY"
            android:inputType="textPersonName"
            android:text="@string/rotionalVectorY"
